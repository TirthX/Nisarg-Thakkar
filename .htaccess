RewriteEngine On

# Remove .html extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Redirect .html URLs to clean URLs
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1? [NC,L,R=301]

# Handle index.html as home
RewriteRule ^home/?$ index.html [NC,L]
RewriteRule ^$ index.html [NC,L]

# Specific redirects for your pages
RewriteRule ^about/?$ about.html [NC,L]
RewriteRule ^expertise/?$ expertise.html [NC,L]
RewriteRule ^vision/?$ vision.html [NC,L]
RewriteRule ^contact/?$ contact.html [NC,L]
